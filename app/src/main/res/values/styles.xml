<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="my_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="backgroundTint">@null</item>
    </style>
    <style name="btn_blue" parent="my_btn">
        <item name="android:background">@drawable/blue_btn</item>
    </style>
    <style name="btn_green" parent="my_btn">
        <item name="android:background">@drawable/green_btn</item>
    </style>
    <style name="btn_light_blue" parent="my_btn">
        <item name="android:background">@drawable/light_blue_btn</item>
    </style>
    <style name="small_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="backgroundTint">@null</item>
    </style>
    <style name="small_btn_green" parent="small_btn">
        <item name="android:background">@drawable/green_btn</item>
    </style>
    <style name="small_btn_normal_width">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="backgroundTint">@null</item>
    </style>
    <style name="small_btn_green_normal_width" parent="small_btn_normal_width">
        <item name="android:background">@drawable/green_btn</item>
    </style>
    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5%</item>
    </style>
</resources>